@using System.Threading.Tasks
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization

@model JezekT.AspNetCore.IdentityServer4.WebApp.Models.ApiResourceViewModels.ApiResourceViewModel

@inject IViewLocalizer Localizer
@inject IStringLocalizerFactory StringLocalizerFactory
@{
    var sharedLocalizer = StringLocalizerFactory.Create("Views.Shared.SharedResources", null);
    ViewData["Title"] = Localizer["ViewTitle"];
}

<div class="page-header">
    <h1>@ViewData["Title"]</h1>    
</div>

<p>
    <a asp-action="Create" class="btn-bracketed">@sharedLocalizer["CreateNew"]</a>
</p>

<data-table url-data="@Url.Action("GetTableDataJsonAsync", "ApiResources")" class="table table-striped table-bordered">
    <data-table-columns>
        <data-table-column asp-for="Enabled"/>
        <data-table-column asp-for="Name"/>
        <data-table-column asp-for="DisplayName"/>
        <data-table-column asp-for="Description" />
        <data-table-column>
            <data-table-column-action action-title="@sharedLocalizer["Edit"]" action-url="@Url.Action("Edit", "ApiResources")"/>
            <data-table-column-action action-title="@sharedLocalizer["Details"]" action-url="@Url.Action("Details", "ApiResources")" />
            <data-table-column-action action-title="@sharedLocalizer["Delete"]" action-url="@Url.Action("Delete", "ApiResources")" />
        </data-table-column>
    </data-table-columns>
</data-table>

