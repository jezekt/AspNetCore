@using System.Threading.Tasks
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@model JezekT.AspNetCore.IdentityServer4.WebApp.Models.ClientPostLogoutRedirectUriViewModels.ClientPostLogoutRedirectUriViewModel

@inject IViewLocalizer Localizer
@inject IStringLocalizerFactory StringLocalizerFactory
@{
    var sharedLocalizer = StringLocalizerFactory.Create("Views.Shared.SharedResources", null);
    var stringLocalizer = StringLocalizerFactory.Create("Views.ClientPostLogoutRedirectUris.SharedResources", null);
    ViewData["Title"] = sharedLocalizer["CreateTitle"];
}

<div class="page-header">
    <h1>@ViewData["Title"]</h1>
    <h4>@stringLocalizer["EntityName"]</h4>
    <div asp-validation-summary="All" class="text-danger"></div>
</div>

<form asp-action="Create">
    <div class="form-horizontal">
        <input type="hidden" asp-for="Id"/>
        <input type="hidden" asp-for="ClientId"/>
        <div class="form-group">
            <label asp-for="PostLogoutRedirectUri" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="PostLogoutRedirectUri" class="form-control" placeholder="@stringLocalizer["PostLogoutRedirectUriPlaceholder"]"/>
                <span asp-validation-for="PostLogoutRedirectUri" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" Value="@sharedLocalizer["Create"]" class="btn btn-default"/>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
