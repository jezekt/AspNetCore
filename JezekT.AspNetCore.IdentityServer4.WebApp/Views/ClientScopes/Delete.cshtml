@using JezekT.AspNetCore.IdentityServer4.WebApp.Views.ClientScopes
@using JezekT.AspNetCore.IdentityServer4.WebApp.Views.Shared
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@model JezekT.AspNetCore.IdentityServer4.WebApp.Models.ClientScopeViewModels.ClientScopeViewModel

@inject IViewLocalizer Localizer
@inject IStringLocalizerFactory StringLocalizerFactory
@{
    var sharedLocalizer = StringLocalizerFactory.Create(typeof(SharedResources));
    var stringLocalizer = StringLocalizerFactory.Create(typeof(ClientScopeResources));
    ViewData["Title"] = sharedLocalizer["DeleteTitle"];
}

<div class="page-header">
    <h1>@ViewData["Title"]</h1>
    <h4>@stringLocalizer["EntityName"]</h4>
</div>

<div class="text-warning">
    <p>
        @sharedLocalizer["DeleteQuestion"]        
    </p>
</div>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Scope)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Scope)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id"/>
        <input type="hidden" asp-for="ClientId"/>
        <div>
            <input type="submit" value="@sharedLocalizer["Delete"]" class="btn btn-default"/>
        </div>
    </form>
</div>

