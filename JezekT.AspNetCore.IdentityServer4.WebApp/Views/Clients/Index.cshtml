@using JezekT.AspNetCore.IdentityServer4.WebApp.Views.Shared
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization

@model JezekT.AspNetCore.IdentityServer4.WebApp.Models.ClientViewModels.ClientViewModel

@inject IViewLocalizer Localizer
@inject IStringLocalizerFactory StringLocalizerFactory
@{
    var sharedLocalizer = StringLocalizerFactory.Create(typeof(SharedResources));
    ViewData["Title"] = Localizer["ViewTitle"];
}

<div class="page-header">
    <h1>@ViewData["Title"]</h1>    
</div>

<p>
    <a asp-action="Create" class="btn-bracketed">@sharedLocalizer["CreateNew"]</a>
</p>


<data-table url-data="@Url.Action("GetTableDataJsonAsync", "Clients")" class="table table-striped table-bordered">
    <data-table-columns>
        <data-table-column asp-for="Enabled"/>
        <data-table-column asp-for="ClientId"/>
        <data-table-column asp-for="ClientName"/>
        <data-table-column>
            <data-table-column-action action-title="@sharedLocalizer["Edit"]" action-url="@Url.Action("Edit", "Clients")"/>
            <data-table-column-action action-title="@sharedLocalizer["Details"]" action-url="@Url.Action("Details", "Clients")" />
            <data-table-column-action action-title="@sharedLocalizer["Delete"]" action-url="@Url.Action("Delete", "Clients")" />
        </data-table-column>
    </data-table-columns>
</data-table>

