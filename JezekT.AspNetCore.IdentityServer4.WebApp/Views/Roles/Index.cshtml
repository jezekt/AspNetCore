@using System.Threading.Tasks
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization

@model JezekT.AspNetCore.IdentityServer4.WebApp.Models.RoleViewModels.RoleViewModel

@inject IViewLocalizer Localizer
@inject IStringLocalizerFactory StringLocalizerFactory
@{
    var sharedLocalizer = StringLocalizerFactory.Create("Views.Shared.SharedResources", null);
    ViewData["Title"] = Localizer["ViewTitle"];
}

<h2>@ViewData["Title"]</h2>
<p>
    <a asp-action="Create" class="btn-bracketed">@sharedLocalizer["CreateNew"]</a>
</p>


<data-table url-data="@Url.Action("GetTableDataJsonAsync", "Roles")" class="table table-striped table-bordered">
    <data-table-columns>
        <data-table-column asp-for="Name"/>
        <data-table-column>
            <data-table-column-action action-title="@sharedLocalizer["Edit"]" action-url="@Url.Action("Edit", "Roles")"/>
            <data-table-column-action action-title="@sharedLocalizer["Delete"]" action-url="@Url.Action("Delete", "Roles")" />
        </data-table-column>
    </data-table-columns>
</data-table>

