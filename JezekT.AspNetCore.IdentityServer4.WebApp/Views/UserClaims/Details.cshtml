@using JezekT.AspNetCore.IdentityServer4.WebApp.Views.Shared
@using JezekT.AspNetCore.IdentityServer4.WebApp.Views.UserClaims
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@model JezekT.AspNetCore.IdentityServer4.WebApp.Models.UserClaimViewModels.UserClaimViewModel

@inject IStringLocalizerFactory StringLocalizerFactory
@inject IViewLocalizer Localizer
@{
    var sharedLocalizer = StringLocalizerFactory.Create(typeof(SharedResources));
    var stringLocalizer = StringLocalizerFactory.Create(typeof(UserClaimResources));
    ViewData["Title"] = sharedLocalizer["DetailsTitle"];
}

<div class="page-header">
    <h1>@ViewData["Title"]</h1>
    <h4>@stringLocalizer["EntityName"]</h4>
</div>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ClaimType)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ClaimType)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ClaimValue)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ClaimValue)
        </dd>
    </dl>
</div>
<br/>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-bracketed">@sharedLocalizer["Edit"]</a>
</div>
