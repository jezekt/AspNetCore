@using System.Threading.Tasks
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@model JezekT.AspNetCore.IdentityServer4.WebApp.Models.UserClaimViewModels.UserClaimViewModel

@inject IViewLocalizer Localizer
@inject IStringLocalizerFactory StringLocalizerFactory
@{
    var sharedLocalizer = StringLocalizerFactory.Create("Views.Shared.SharedResources", null);
    var stringLocalizer = StringLocalizerFactory.Create("Views.UserClaims.SharedResources", null);
    ViewData["Title"] = sharedLocalizer["EditTitle"];
}


<h2>@ViewData["Title"]</h2>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>@stringLocalizer["EntityName"]</h4>
        <hr />
        <input type="hidden" asp-for="Id"/>
        <input type="hidden" asp-for="UserId" />
        <div class="form-group">
            <label asp-for="ClaimType" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ClaimType" class="form-control" placeholder="@stringLocalizer["ClaimType"]" />
                <span asp-validation-for="ClaimType" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ClaimValue" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ClaimValue" class="form-control" placeholder="@stringLocalizer["ClaimValue"]" />
                <span asp-validation-for="ClaimValue" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" Value="@sharedLocalizer["Save"]" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
